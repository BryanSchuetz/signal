<%= partial "head" %>  
  <body lang="en">
    <div id="container">
      <header>
        <%= partial "header" %>
        <nav class="clearfix"><% unless current_article.previous_article.nil? %>
          <div class="navButton button previousButton">
            <a class="previous details" href="<%= current_article.previous_article.url %>"><span class="ss-icon ">&#x23EA;</span>Earlier</a>
          </div>
          <% else %>
            <div class="navButton button previousButton">
              <a href="/archives.html" class="previous details"><span class="ss-icon">&#xE9A1;</span>Archive</a>
            </div> 
          <% end %>
          <% unless current_article.next_article.nil? %>
            <div class="navButton button nextButton">
              <a href="<%= current_article.next_article.url %>" class="next details">Later<span class="ss-icon">&#x23E9;</span></a>
            </div>
          <% else %>
            <div class="navButton button nextButton">
              <a href="/archives.html" class="next details">Archive<span class="ss-icon">&#xE9A1;</span></a>
            </div>
          <% end %>
         <span class="navLinks details"><a href="http://twitter.com"><i class="ss-icon ss-social-circle">&#xF611;</i>Twitter</a><a href="/rss.rss"><i class="ss-icon ss-social-circle">&#xE310;</i>RSS</a><a class="last" href="mailto:blank@blank.com"><i class="ss-icon ss-social-circle">&#x2709;</i>Contact</a></span>
        </nav>
      </header>
      <article class="single">
        <h2><a href="<%= current_article.url %>"><%= current_article.title %></a></h2>
        <span class="postDetails clearfix"><time class="date details"><%= current_article.date.strftime('%b %e %Y') %></time><span class="tagLinks details">Tags: <%= partial "tags" %></span></span>
        <%= yield %>
      </article>
      <%= partial "footer" %>
    </div>
  </body>
</html>